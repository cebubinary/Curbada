
@{
    ViewBag.Title = "Reservation Details";
}

@section scripts{
    <script>

    </script>
}


<h2>Details</h2>

<div class="container">
    <div class="row">
        <div class="col-sm-6">
            <div class="row">
                <div class="col-sm-4">
                    <div class="form-group">
                        <select id="room-type" class="form-control"></select>
                    </div>
                </div>
                <div class="col-sm-4">
                    <div class="form-group">
                        <input type="text" id="" class="form-control">
                    </div>
                </div>
                <div class="col-sm-4">
                    <div id="div-book" class="form-group" align="right">
                        <button type="button" class="btn btn-primary">Button</button>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-sm-4">
                    <div class="form-group">
                        <label for="check-in-date">Check-In Date</label>
                        <div class="input-group date" data-provide="datepicker">
                            <input type="text" id="check-in-date" class="form-control">
                            <div class="input-group-addon">
                                <span class="glyphicon glyphicon-calendar"></span>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-sm-4">
                    <div class="form-group">
                        <label for="check-out-date">Check-Out Date</label>
                        <div class="input-group date" data-provide="datepicker">
                            <input type="text" id="check-out-date" class="form-control">
                            <div class="input-group-addon">
                                <span class="glyphicon glyphicon-calendar"></span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-12">
                    <div id="div-result" class="form-group">
                        <table id="table-result" class="table table-bordered">
                            <thead>
                                <tr>
                                    <th>Room Name</th>
                                    <th>Guest Name</th>
                                    <th>Check-In Date</th>
                                    <th>Check-Out Date</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>4</td>
                                    <td>Guest</td>
                                    <td>02/14/2018</td>
                                    <td>02/14/2018</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-sm-6">
            <div class="form-group">
                <h4>
                    <label style="font-size: 15px; font-weight: bold;">Rate </label>
                    <span id="room-name" class="label label-info">2500</span>
                </h4>
            </div>
        </div>
    </div>
</div>




